{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["es6", "es7"],
    "sourceMap": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", ".vscode-test"]
}
